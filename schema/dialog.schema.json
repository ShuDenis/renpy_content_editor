{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DialogProject",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "dialogs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "nodes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                },
                "speaker": {
                  "type": "string"
                },
                "choices": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "text": {
                        "type": "string"
                      },
                      "next": {
                        "type": "string"
                      },
                      "cond": {
                        "type": "string"
                      }
                    },
                    "required": []
                  }
                }
              },
              "required": [
                "id"
              ]
            }
          }
        },
        "required": [
          "id",
          "nodes"
        ]
      }
    }
  },
  "required": [
    "version",
    "dialogs"
  ]
}